{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "required": true,
      "type": "decimal"
    },
    "desc": {
      "type": "richtext",
      "required": true
    },
    "thumb": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["files", "images", "videos"],
      "plugin": "upload",
      "required": true
    },
    "comments": {
      "collection": "comment",
      "via": "product"
    }
  }
}
